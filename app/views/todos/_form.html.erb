<% if @todo.errors.any? %>
  <h3>The following errors occured-</h3>
  <ul>
    <% @todo.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end%>
  </ul>
  <% end%>
  <%= form_for @todo do |f| %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </p>

    <%= f.submit %>

  <% end %>
<%= link_to "back to Index", todos_path %>
